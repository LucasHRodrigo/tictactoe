<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".JogoActivity">

    <TextView
        android:id="@+id/textViewJogadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewJogadorAtual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:background="@drawable/tabuleiro_divisao" />

            <Button
                android:id="@+id/button1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:background="@drawable/tabuleiro_divisao" />

            <Button
                android:id="@+id/button2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/tabuleiro_divisao" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:background="@drawable/tabuleiro_divisao" />

            <Button
                android:id="@+id/button4"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:background="@drawable/tabuleiro_divisao" />

            <Button
                android:id="@+id/button5"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/tabuleiro_divisao" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button6"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:background="@drawable/tabuleiro_divisao" />

            <Button
                android:id="@+id/button7"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:background="@drawable/tabuleiro_divisao" />

            <Button
                android:id="@+id/button8"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_tabuleiro"
                android:textSize="50sp" />

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:foregroundGravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonVoltarTela4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="bottom|left"
            android:layout_marginTop="170dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/baseline_keyboard_double_arrow_left_24" />

        <ImageButton
            android:id="@+id/imageButtonVolOn4"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_gravity="bottom|left"
            android:layout_marginTop="170dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_volume_up_24" />
    </LinearLayout>

</LinearLayout>